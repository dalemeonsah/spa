<h1>Home Page</h1>

<div class="container">
  <div class="leftcontainer">
    <div class="formcontainer">
      <h2>New Contact</h2>
      <form id="contact-form">
        <label for="fullname">Fullname</label>
        <input id="fullname" name="fullname" type="text"></input>
        <br/>
        <label for="email">Email</label>
        <input id="email" name="email" type="text"></input>
        <br/>
        <label for="phone">Phone</label>
        <input id="phone" name="phone" type="text"></input>
        <br/>
        <button id="enter" type="button">Enter</button>
      </form>
    </div>

    <div class="searchcontainer">
      <br>
      <h2>Search Contact</h2>
      <label for="search">Please enter</label>
      <input id="search" type="text"></input>  
    </div>
  </div>

  <div class="rightcontainer">
    <div class="show">
      <h2>Show Here</h2>
      <table id="contactstable" border="1">
        <thead>
          <tr>ID</tr>
          <tr>Contact</tr>
        </thead>
        <tbody></tbody>
      </table>
    </div>
    <div class="contactcontainer">
      <h2>Contact Detail</h2>
      <div id="contactdetail"></div>
    </div>
  </div>
</div>